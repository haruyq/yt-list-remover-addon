{
  "manifest_version": 2,
  "name": "Youtube-List-Remover",
  "version": "1.2",

  "description": "Youtubeでリンクをコピーした際に、プレイリストを自動的に除外します。",

  "permissions": ["clipboardRead", "clipboardWrite"],

  "browser_specific_settings": {
    "gecko": {
      "id": "{4ecb4993-9847-4186-b451-084b4ef5981e}",
      "strict_min_version": "102.0"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://youtu.be/*"],
      "js": ["remover.js"]
    }
  ]
}
